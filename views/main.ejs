<body>
    <div class="container">
        <div class="masthead">
            <ul class="nav nav-pills pull-right">
                <li>
                    <a href="#" id="create" data-toggle="modal" data-target="#create-modal"><i class="fa fa-plus-circle fa-lg"></i></a>
                </li>
                <li>
                    <a href="#" id="logout"><i class="fa fa-cog fa-lg"></i></a>
                </li>
            </ul>
            <h3 class="muted">Bazaar</h3>
        </div>

      <!-- Create Modal -->
      <div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title" id="myModalLabel">Create a Post</h4>
            </div>
            <form id="create-form">
              <div class="modal-body">
                <input class="form-control create-title" required type="text" placeholder="Title">
                <input class="form-control create-description" required type="text" placeholder="Description">
                <input class="form-control create-price" required type="number" placeholder="Price">
                <select class='form-control create-categories' required>
                  <% for (var i = 0; i < categories.length; i++) { %>
                    <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
                  <% } %>
                </select>
                <span class="btn btn-default btn-file form-control">
                  Upload an Image <input id='create-file' type="file">
                </span>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" id="create-submit" class="btn btn-primary">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Post Modal -->
      <div class="modal fade" id="post-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title">Post Title</h4>
            </div>
            <img class="modal-image" height="200" width="200">
            <div class="modal-body"></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <a id="modal-contact" href="https://mail.google.com/mail/?view=cm&fs=1&to=someone@example.com&su=SUBJECT&body=BODY" target="_blank" class="btn btn-success">Contact</a>
            </div>
          </div>
        </div>
      </div>
        <hr>
        <div class="row">
          <div class="col-md-2 col-md-offset-8">
            <select class="form-control" id="category-filter">
              <option>All</option>
              <% for (var i = 0; i < categories.length; i++) { %>
                <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="row">
          <div id="post-container" class="col-md-8 col-md-offset-2 bg-primary">
            <% include ../public/templates/posts.ejs %>
          </div>
        </div>
        <hr>
        <div class="footer">
            <p>&copy; Bazaar 2015</p>
        </div>
    </div>
